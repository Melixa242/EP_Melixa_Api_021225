<?xml version="1.0" encoding="utf-8"?>
<!-- Este mismo layout se usa para activity_categories.xml y activity_users.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".CategoriesActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_category"
        android:tint="@color/text_secondary"
        android:contentDescription="Placeholder" />

    <TextView
        android:id="@+id/tv_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Módulo en construcción"
        android:textColor="@color/text_primary"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Esta sección estará disponible próximamente.\nPuedes implementar el CRUD siguiendo el patrón de Productos."
        android:textColor="@color/text_secondary"
        android:textSize="14sp" />

</LinearLayout>